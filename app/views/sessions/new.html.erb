<h1>Login</h1>

<% if @user.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :session do |f| %>
  <div>
    <%= f.label :email %>
    <div>
      <%= f.email_field :email %>
    </div>
  </div>
  <div>
    <%= f.label :password %>
    <div>
      <%= f.password_field :password %>
    </div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
